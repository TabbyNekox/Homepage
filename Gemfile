source "https://rubygems.org"

gem "jekyll", "~> 3.9"  # Jekyllのバージョン（GitHub Pagesに合わせるのが理想だが、まずはこれで）
gem "github-pages", group: :jekyll_plugins # GitHub Pages環境を再現するgem
# または、特定のテーマだけ使いたい場合：
# gem "jekyll-theme-minimal" # あなたが使っているテーマ名

# Windowsの場合、文字コードエラーを防ぐおまじないを追加することが推奨される
gem 'wdm', '>= 0.1.0' if Gem.win_platform?